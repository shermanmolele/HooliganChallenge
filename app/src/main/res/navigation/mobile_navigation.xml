<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:label="@string/title_home"
        android:name="com.example.hooliganchallenge.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_videoPlayerFragment"
            app:destination="@id/videoPlayerFragment"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_schedules"
        android:label="@string/title_schedule"
        android:name="com.example.hooliganchallenge.ui.schedule.ScheduleFragment"
        tools:layout="@layout/fragment_schedule"/>

    <fragment
        android:id="@+id/videoPlayerFragment"
        android:name="com.example.hooliganchallenge.ui.videoPlayer.VideoPlayerFragment"
        android:label="fragment_video_player"
        tools:layout="@layout/fragment_video_player"/>
</navigation>
